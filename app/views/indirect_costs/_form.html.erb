<%= form_with(model: extra, id: "extra-form") do |form| %>
  <% if extra.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= t('indirect_costs.form.errors', count: extra.errors.count) %></h4>
      <ul>
        <% extra.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, t('indirect_costs.form.name'), class: "form-label" %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <%= form.label :unit_id, t('indirect_costs.form.unit'), class: "form-label" %>
      <%= form.collection_select :unit_id, Unit.all.order(:name), :id, :name, { prompt: t('indirect_costs.form.select_unit') }, { class: "form-select" } %>
      <div class="form-text mt-1">
        <% if current_user.admin? %>
          <%= link_to t('indirect_costs.form.create_unit'), new_admin_unit_path, target: "_blank" %>
        <% end %>
      </div>
      <% if Rails.env.development? %>
        <div class="text-muted mt-2 small">
          <%= t('indirect_costs.form.current_unit_id', id: extra.unit_id, name: (extra.unit&.name || t('indirect_costs.form.none'))) %>
        </div>
      <% end %>
    </div>
    
    <div class="col-md-6">
      <%= form.label :cost, t('indirect_costs.form.cost'), class: "form-label" %>
      <div class="input-group">
        <span class="input-group-text">$</span>
        <%= form.number_field :cost, class: "form-control", step: "0.01", min: 0, required: true %>
      </div>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :description, t('indirect_costs.form.description'), class: "form-label" %>
    <%= form.text_area :description, rows: 3, class: "form-control" %>
  </div>
<% end %>


