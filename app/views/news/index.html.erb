<div class="container-fluid">
  <div class="row mb-3">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <h1 style="color: var(--cotalo-green); margin-bottom: 0;">Novedades</h1>
        <%= link_to root_path, class: "btn btn-outline-secondary" do %>
          <i class="fas fa-arrow-left"></i> Volver
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <% if @news.any? %>
        <% @news.each do |news_item| %>
          <div class="card mb-2 border-0 shadow-sm" style="border-left: 4px solid var(--cotalo-green) !important;">
            <div class="card-body px-3 py-1">
              <h5 class="card-title mb-2" style="color: var(--cotalo-green);"><%= news_item.title %></h5>
              <div class="d-flex flex-column" style="gap: 0;">
                <h6 class="card-subtitle text-light-gray small mb-0">
                  <i class="fas fa-calendar-alt"></i>
                  <%= news_item.published_at.strftime("%d de %B del %Y") %>
                </h6>
                <div style="line-height: 1.2; white-space: pre-line;">
                  <%= news_item.content %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="card border-0 shadow-sm">
          <div class="card-body py-2 px-3">
            <div class="alert alert-info mb-0">
              No hay novedades disponibles en este momento.
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
.news-content {
  white-space: pre-wrap;
  margin-top: 0 !important;
  padding-top: 0 !important;
}

.news-content p {
  margin-bottom: 0 !important;
  margin-top: 0.25rem !important;
}

.card-subtitle {
  margin-bottom: 0 !important;
}

.card-body {
  padding-top: 0.75rem !important;
  padding-bottom: 0.75rem !important;
}

.text-light-gray {
  color: #adb5bd !important;
}
</style>
