<div class="row">
  <div class="col-12 mb-4">
    <div class="d-flex justify-content-between align-items-center">
      <h1>Units</h1>
      <%= link_to "New Unit", new_unit_path, class: "btn btn-primary" %>
    </div>
  </div>
  
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <% if @units.any? %>
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Abbreviation</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @units.each do |unit| %>
                  <tr>
                    <td><%= unit.name %></td>
                    <td><%= unit.abbreviation %></td>
                    <td>
                      <div class="btn-group btn-group-sm">
                        <%= link_to "Edit", edit_unit_path(unit), class: "btn btn-outline-primary" %>
                        <%= button_to "Delete", unit_path(unit), method: :delete, 
                            class: "btn btn-outline-danger", 
                            form: { data: { turbo_confirm: "Are you sure you want to delete this unit?" } } %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="alert alert-info">
            No units found. <%= link_to "Create your first unit", new_unit_path %>.
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
