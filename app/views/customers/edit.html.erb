<% content_for :page_title do %>
  <%= t('customers.edit.title') %>
<% end %>

<% content_for :page_actions do %>
  <%= link_to customers_path, class: "btn btn-outline-light me-2" do %>
    <%= t('common.cancel') %>
  <% end %>
  <%= button_tag class: "btn btn-outline-light", form: "customer-form" do %>
    <%= t('common.save') %>
  <% end %>
<% end %>

<div class="row">
  <div class="col-12">
    <div class="card green-accent-panel">
      <div class="card-body p-3">
        <%= render "form", customer: @customer %>
      </div>
    </div>
  </div>
</div> 