          </div>
        </div>
      </div>
      <!-- Video Column -->
      <div class="col-lg-6 d-flex flex-column justify-content-center align-items-center">
        <div class="mb-3 text-center fw-bold fs-5" style="color: #fff;">Video detallado de uso de Cotalo</div>
        <div class="ratio ratio-16x9 w-100" style="max-width: 480px;">
          <!-- Replace src with your video URL when ready -->
          <iframe
            src="https://www.youtube.com/embed/TSj0mBVBJ6w"
            title="Tutorial Video"
            allowfullscreen
            style="border:0;"
          ></iframe>
        </div>
        
        <!-- Demo Request CTA -->
        <div class="text-center mt-4 w-100">
          <div class="card bg-darker border-success">
            <div class="card-body p-4">
              <h4 class="text-success mb-3"><%= t('home.demo_request_title') %></h4>
              <p class="text-light mb-4"><%= t('home.demo_request_subtitle') %></p>
              <%= link_to new_demo_request_path, class: "btn btn-success btn-lg" do %>
                <i class="fas fa-video me-2"></i><%= t('home.request_demo') %>
              <% end %>
              <div class="mt-2">
                <small class="text-muted"><%= t('home.demo_request_info') %></small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%# CTA Section %>
<div class="cta-section py-5">
  <div class="container text-center">
    <h2 class="mb-4"><%= t('home.cta_title') %></h2>
    <p class="lead mb-4"><%= t('home.cta_subtitle') %></p>
    <% if user_signed_in? %>
