<%# Hero Section %>
<div class="hero-section py-2">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <h1 class="display-4 fw-bold mb-4"><%= t('home.hero_title') %></h1>
        <p class="lead mb-4">
          <%= t('home.hero_subtitle') %>
        </p>
        <div class="d-flex gap-3">
          <% if user_signed_in? %>
            <%= link_to dashboard_path, class: "btn btn-success btn-lg" do %>
              <i class="fas fa-tachometer-alt me-2"></i><%= t('home.go_to_dashboard') %>
            <% end %>
          <% else %>
            <%= link_to new_user_registration_path, class: "btn btn-success btn-lg" do %>
              <i class="fas fa-rocket me-2"></i><%= t('home.register_free') %>
            <% end %>
            <%= link_to new_user_session_path, class: "btn btn-outline-success btn-lg" do %>
              <i class="fas fa-sign-in-alt me-2"></i><%= t('home.login') %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="col-lg-6 d-none d-lg-block">
        <div class="text-center">
          <i class="fas fa-box-open fa-10x" style="color: var(--cotalo-green);"></i>
        </div>
      </div>
    </div>
  </div>
</div>

