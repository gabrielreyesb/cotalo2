<%# All custom styles moved to app/assets/stylesheets/components/_home.scss %>

<style>
/* Steps Animation Styles - Desktop First */
.steps-animation-container {
  max-width: 1200px;
  padding: 1rem 1.5rem;
  background-color: rgba(0, 0, 0, 0.3);
  border: 1px solid rgba(66, 185, 131, 0.3);
  border-radius: 12px;
  display: flex;
  justify-content: space-between;
  gap: 2rem;
}

.steps-header {
  flex: 0 0 250px;
}

.steps-title {
  font-size: 1.75rem;
  font-weight: 600;
  margin-bottom: 0;
  color: #ffffff;
  text-align: left;
  line-height: 1.3;
}

.steps-animation {
  flex: 1;
  display: flex;
  align-items: flex-start;
  gap: 1.5rem;
}

.step-number {
  flex: 0 0 auto;
  font-size: 2rem;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background-color: var(--cotalo-green);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  margin-bottom: 0;
}

.step-text {
  flex: 1;
  font-size: 1.1rem;
  line-height: 1.5;
  color: #ffffff;
  text-align: left;
  margin-bottom: 0;
  min-width: 200px;
  word-wrap: break-word;
}

/* Tablet responsive adjustments */
@media (max-width: 768px) {
  .steps-animation-container {
    max-width: 90%;
    padding: 1.5rem 1rem;
  }
  
  .steps-content {
    flex-direction: column;
    gap: 1.5rem;
    text-align: center;
  }
  
  .steps-header {
    min-width: auto;
  }
  
  .steps-title {
