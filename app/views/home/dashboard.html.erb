<% content_for :page_title do %>
  <%= t('dashboard.title') %>
<% end %>

<div class="scrollable-view-container">
  <!-- Welcome and Demo Blocks Row -->
  <div class="row mb-4">
    <!-- Welcome and Setup Block -->
    <% unless current_user.block_closed?('welcome') %>
      <div class="col-md-8 mb-3" id="welcome-block">
        <div class="green-accent-panel position-relative h-100">
          <button type="button" class="btn btn-sm btn-outline-success position-absolute top-0 end-0 m-3" 
                  onclick="closeBlock('welcome')" aria-label="Close" style="z-index: 10;">
            <i class="fa fa-times"></i>
          </button>
          <div class="card-body p-4 d-flex flex-column h-100">
            <!-- Welcome Section -->
            <div class="d-flex align-items-start mb-4">
              <div class="me-3">
                <span style="font-size: 2.5rem;">ðŸ‘‹</span>
              </div>
              <div class="flex-grow-1">
                <h4 class="mb-2"><%= t('dashboard.welcome.greeting', name: current_user.email.split('@').first) %></h4>
                <p class="text-light-gray mb-3"><%= t('dashboard.welcome.new_subtitle') %></p>
                <p class="text-light-gray mb-3"><%= t('dashboard.welcome.customization_text') %></p>
                <p class="text-light-gray mb-4"><%= t('dashboard.welcome.suggested_steps') %></p>
              </div>
            </div>
            
            <!-- Guided Process Steps -->
            <div class="guided-process flex-grow-1">
              <!-- Step 1: Review Example Product -->
              <div class="step-item mb-3">
                <span class="step-number">1</span>
                <%= link_to products_path, class: "btn btn-sm btn-outline-success" do %>
                  <%= t('dashboard.welcome.review_example') %>
                <% end %>
              </div>

              <!-- Step 2: Create Product -->
              <div class="step-item mb-3">
                <span class="step-number">2</span>
                <%= link_to new_product_path, class: "btn btn-sm btn-outline-success" do %>
                  <%= t('dashboard.welcome.create_first') %>
                <% end %>
              </div>

              <!-- Step 3: Create Quote -->
              <div class="step-item mb-3">
                <span class="step-number">3</span>
                <%= link_to new_quote_path, class: "btn btn-sm btn-outline-success" do %>
                  <%= t('dashboard.welcome.create_quote') %>
                <% end %>
              </div>

              <!-- Step 4: Customize Catalogs and Configurations -->
              <div class="step-item mb-3">
                <span class="step-number">4</span>
                <div class="d-flex flex-column flex-wrap gap-1">
                  <div>
                    <span class="step-label">CatÃ¡logos:</span>
                    <%= link_to materials_path, class: "btn btn-sm btn-outline-success" do %>
                      <%= t('dashboard.customization.materials') %>
                    <% end %>
                    <span class="vertical-separator">|</span>
                    <%= link_to manufacturing_processes_path, class: "btn btn-sm btn-outline-success" do %>
                      <%= t('dashboard.customization.processes') %>
                    <% end %>
                    <span class="vertical-separator">|</span>
                    <%= link_to extras_path, class: "btn btn-sm btn-outline-success" do %>
                      <%= t('dashboard.customization.extras') %>
                    <% end %>
                    <span class="vertical-separator">|</span>
                    <%= link_to price_margins_path, class: "btn btn-sm btn-outline-success" do %>
                      <%= t('navbar.price_margins') %>
                    <% end %>
                  </div>
                  <div>
                    <span class="step-label">Configuraciones:</span>
                    <%= link_to edit_app_configs_path, class: "btn btn-sm btn-outline-success" do %>
                      <%= t('dashboard.account.app_configs') %>
                    <% end %>
                    <span class="vertical-separator">|</span>
                    <%= link_to edit_pdf_config_path, class: "btn btn-sm btn-outline-success" do %>
                      <%= t('dashboard.account.pdf_configs') %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Demo Request Block -->
    <% unless current_user.block_closed?('demo') %>
      <div class="col-md-4 mb-3" id="demo-block">
        <div class="green-accent-panel position-relative h-100">
          <button type="button" class="btn btn-sm btn-outline-success position-absolute top-0 end-0 m-3" 
                  onclick="closeBlock('demo')" aria-label="Close" style="z-index: 10;">
            <i class="fa fa-times"></i>
          </button>
          <div class="card-body p-4 d-flex flex-column h-100">
            <div class="d-flex align-items-start mb-3">
              <div class="me-3">
                <span style="font-size: 2.5rem;">ðŸŽ¯</span>
              </div>
              <div class="flex-grow-1">
                <h4 class="mb-2"><%= t('dashboard.demo.title') %></h4>
                <p class="text-light-gray mb-0"><%= t('dashboard.demo.subtitle') %></p>
              </div>
            </div>
            <div class="mt-auto">
              <div class="d-flex flex-wrap gap-2">
                <%= link_to new_demo_request_path, class: "btn btn-sm btn-success" do %>
                  <i class="fa fa-play me-1"></i> <%= t('dashboard.demo.request_demo') %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row">
    <!-- Recent Products Section -->
    <div class="col-md-6 mb-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <h3><%= t('dashboard.recent_products') %></h3>
          <p class="text-light-gray small mb-0"><%= t('dashboard.showing_recent_products') %></p>
        </div>
        <%= link_to new_product_path, class: "btn btn-sm btn-success" do %>
          <i class="fa fa-plus me-1"></i> <%= t('dashboard.new_product') %>
        <% end %>
      </div>

      <% if current_user.products.any? %>
        <div class="green-accent-panel">
          <div class="card-body p-4">
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th style="width: 70%;">
                      <span class="nowrap"><%= t('dashboard.description') %></span>
                    </th>
                    <th style="width: 30%;" class="text-end">
                      <span class="nowrap"><%= t('dashboard.price') %></span>
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <% current_user.products.order(created_at: :desc).limit(5).each do |product| %>
                    <tr>
                      <td class="text-truncate" style="max-width: 0;">
                        <%= link_to product.description, product_path(product), class: "product-link", title: product.description %>
                      </td>
                      <td class="text-end"><%= number_to_currency(product.data && product.data.dig('pricing', 'total_price') || 0) %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            
            <div class="text-end mt-4">
              <%= link_to t('dashboard.view_all_products'), products_path, class: "btn btn-outline-success" %>
            </div>
          </div>
        </div>
      <% else %>
        <div class="green-accent-panel">
          <div class="card shadow-lg border-0">
            <div class="card-body p-4">
              <div class="alert alert-success">
                <%= t('dashboard.no_products_html', link: link_to(t('dashboard.create_first_product'), new_product_path)) %>.
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Recent Quotes Section -->
    <div class="col-md-6 mb-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <h3><%= t('dashboard.recent_quotes') %></h3>
          <p class="text-light-gray small mb-0"><%= t('dashboard.showing_recent_quotes') %></p>
        </div>
        <%= link_to new_quote_path, class: "btn btn-sm btn-success" do %>
          <i class="fa fa-plus me-1"></i> <%= t('dashboard.new_quote') %>
        <% end %>
      </div>

      <% if current_user.quotes.any? %>
        <div class="green-accent-panel">
          <div class="card-body p-4">
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <!-- Project name for small screens only -->
                    <th class="d-table-cell d-md-none" style="width: 60%;">
                      <span class="nowrap"><%= t('quotes.index.project') %></span>
                    </th>
                    <th class="d-table-cell d-md-none text-end" style="width: 40%;">
                      <span class="nowrap"><%= t('dashboard.total') %></span>
                    </th>
                    <!-- Quote number and customer for md+ screens only -->
                    <th class="d-none d-md-table-cell" style="width: 20%;">
                      <span class="nowrap"><%= t('dashboard.number') %></span>
                    </th>
                    <th class="d-none d-md-table-cell" style="width: 50%;">
                      <span class="nowrap"><%= t('dashboard.customer') %></span>
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <% current_user.quotes.order(created_at: :desc).limit(5).each do |quote| %>
                    <tr>
                      <!-- Project name for small screens only -->
                      <td class="d-table-cell d-md-none" style="width: 60%;">
                        <%= link_to quote.project_name, quote_path(quote), class: "product-link" %>
                      </td>
                      <td class="d-table-cell d-md-none text-end" style="width: 40%;">
                        <%= number_to_currency(quote.data && quote.data.dig('totals', 'total') || 0) %>
                      </td>
                      <!-- Quote number and customer for md+ screens only -->
                      <td class="d-none d-md-table-cell">
                        <%= link_to quote.quote_number, quote_path(quote), class: "product-link" %>
                      </td>
                      <td class="d-none d-md-table-cell text-truncate" style="max-width: 0;" title="<%= quote.customer_name %>"><%= quote.customer_name %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            
            <div class="text-end mt-4">
              <%= link_to t('dashboard.view_all_quotes_full'), quotes_path, class: "btn btn-outline-success" %>
            </div>
          </div>
        </div>
      <% else %>
        <div class="green-accent-panel">
          <div class="card shadow-lg border-0">
            <div class="card-body p-4">
              <div class="alert alert-success">
                <%= t('dashboard.no_quotes_html', link: link_to(t('dashboard.create_first_quote'), new_quote_path)) %>.
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
function closeBlock(blockName) {
  fetch('<%= close_dashboard_block_path %>', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
    },
    body: JSON.stringify({ block_name: blockName })
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      const blockElement = document.getElementById(blockName + '-block');
      if (blockElement) {
        blockElement.style.transition = 'opacity 0.3s ease-out';
        blockElement.style.opacity = '0';
        setTimeout(() => {
          blockElement.remove();
        }, 300);
      }
    }
  })
  .catch(error => {
    console.error('Error closing block:', error);
  });
}
</script>


