<style>
  .main-navbar {
    padding: 0.2rem 0;
    border-bottom: none;  /* Remove border since subnavbar will handle division */
    position: relative;
    z-index: 3;  /* Ensure navbar and its dropdowns are above subnavbar */
  }
  
  .main-navbar .navbar-brand,
  .main-navbar .nav-link {
    padding-top: 0;
    padding-bottom: 0;
    line-height: 1;
  }
  
  .main-navbar .navbar-brand {
    font-size: 1.5rem;
  }
  
  .main-navbar .navbar-brand img {
    max-height: 40px;
    width: auto;
    transition: transform 0.2s ease;
  }
  
  .main-navbar .navbar-brand:hover img {
    transform: scale(1.05);
  }
  
  .main-navbar .nav-link {
    font-size: 1rem;
  }

  /* Ensure dropdowns appear above everything */
  .main-navbar .dropdown-menu {
    margin-top: 0;
    border: 1px solid var(--border-color);
    border-top: none;
    background: var(--dark);
  }

  .navbar .dropdown-menu .dropdown-divider {
    border-top: 1px solid #42b983 !important;
    margin: 0.5rem 0;
    opacity: 1 !important;
  }
</style>

