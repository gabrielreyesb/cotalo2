  .main-navbar .navbar-brand,
  .main-navbar .nav-link {
    padding-top: 0;
    padding-bottom: 0;
    line-height: 1;
  }
  
  .main-navbar .navbar-brand {
    font-size: 1.5rem;
  }
  
  .main-navbar .navbar-brand img {
    max-height: 40px;
    width: auto;
    transition: transform 0.2s ease;
  }
  
  .main-navbar .navbar-brand:hover img {
    transform: scale(1.05);
  }
  
  .main-navbar .nav-link {
    font-size: 1rem;
  }

  /* Ensure dropdowns appear above everything */
  .main-navbar .dropdown-menu {
    margin-top: 0;
    border: 1px solid var(--border-color);
    border-top: none;
    background: var(--dark);
  }

  .navbar .dropdown-menu .dropdown-divider {
    border-top: 1px solid #42b983 !important;
    margin: 0.5rem 0;
    opacity: 1 !important;
  }

  /* Subscription status styling */
  .navbar-subscription-status {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    margin-right: 1rem;
    border-radius: 0.375rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .navbar-subscription-status .badge {
    font-size: 0.75rem;
    padding: 0.5rem 0.75rem;
    font-weight: 500;
    white-space: nowrap;
  }

  .navbar-subscription-status .trial-badge {
    background: linear-gradient(135deg, #42b983, #3aa876);
    color: white;
    border: 1px solid rgba(66, 185, 131, 0.3);
  }

  .navbar-subscription-status .active-badge {
    background: linear-gradient(135deg, #28a745, #20c997);
    color: white;
    border: 1px solid rgba(40, 167, 69, 0.3);
  }

  .navbar-subscription-status .warning-badge {
    background: linear-gradient(135deg, #ffc107, #fd7e14);
    color: #212529;
    border: 1px solid rgba(255, 193, 7, 0.3);
  }

  .navbar-subscription-status .danger-badge {
    background: linear-gradient(135deg, #dc3545, #e74c3c);
    color: white;
    border: 1px solid rgba(220, 53, 69, 0.3);
  }

  .navbar-subscription-status .days-text {
    color: #e9ecef;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .navbar-subscription-status .btn-sm {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    color: #212529;
    font-weight: 500;
  }

  /* Agregar espacio en el menú móvil */
  @media (max-width: 991.98px) {
    .navbar-collapse {
      padding-top: 1.5rem;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      margin-top: 1rem;
    }
    
    .navbar-nav .nav-item:first-child {
      margin-top: 0.5rem;
    }
    
    .navbar-nav .nav-item {
      padding: 0.5rem 0;
    }
  }
</style>

