<div class="row">
  <div class="col-12 mb-4">
    <div class="d-flex justify-content-between align-items-center">
      <h1>Material Details</h1>
      <%= link_to "Back to Materials", materials_path, class: "btn btn-secondary" %>
    </div>
  </div>
  
  <div class="col-md-8 offset-md-2">
    <div class="card">
      <div class="card-header">
        <h3><%= @material.description %></h3>
      </div>
      <div class="card-body">
        <div class="row mb-3">
          <div class="col-md-6">
            <strong>Descripci√≥n para cliente:</strong> 
            <p><%= @material.client_description.present? ? @material.client_description : "N/A" %></p>
          </div>
          <div class="col-md-6">
            <strong>Unit:</strong> 
            <p><%= @material.unit.name %> (<%= @material.unit.abbreviation %>)</p>
          </div>
        </div>
        
        <div class="row mb-3">
          <div class="col-md-6">
            <strong>Price:</strong> 
            <p><%= number_to_currency(@material.price) %></p>
          </div>
          <div class="col-md-6">
            <strong>Dimensions:</strong> 
            <p>
              <% if @material.ancho.present? && @material.largo.present? %>
                <%= @material.ancho %> x <%= @material.largo %>
              <% elsif @material.ancho.present? %>
                Width: <%= @material.ancho %>
              <% elsif @material.largo.present? %>
                Length: <%= @material.largo %>
              <% else %>
                N/A
              <% end %>
            </p>
          </div>
        </div>
        
        <% if @material.resistance.present? %>
          <div class="row mb-3">
            <div class="col-12">
              <strong>Resistencia:</strong>
              <p><%= @material.resistance %></p>
            </div>
          </div>
        <% end %>
        
        <% if @material.comments.present? %>
          <div class="row mb-3">
            <div class="col-12">
              <strong>Comments:</strong> 
              <p><%= @material.comments %></p>
            </div>
          </div>
        <% end %>
        
        <div class="d-flex mt-4">
          <%= link_to "Edit", edit_material_path(@material), class: "btn btn-primary me-2" %>
          <%= button_to "Delete", material_path(@material), method: :delete, 
              class: "btn btn-danger", 
              form: { data: { turbo_confirm: "Are you sure you want to delete this material?" } } %>
        </div>
      </div>
    </div>
  </div>
</div>
