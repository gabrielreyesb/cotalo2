<!-- Container with fixed height and scrolling -->
<div class="scrollable-view-container">
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <h1>Materiales</h1>
        <%= link_to new_material_path, class: "btn btn-primary" do %>
          <i class="fa fa-plus me-1"></i> Nuevo material
        <% end %>
      </div>
      <% if Rails.env.development? %>
        <div class="small text-muted mt-2">
          Page rendered at: <%= Time.current.strftime("%Y-%m-%d %H:%M:%S") %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <% if @materials.any? %>
        <!-- Table view for medium and large screens -->
        <div class="card d-none d-md-block shadow-sm mb-4">
          <div class="card-body p-4">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Descripción</th>
                  <th>Descripción para cliente</th>
                  <th>Precio</th>
                  <th>Unidad</th>
                  <th>Dimensiones</th>
                  <th class="text-end">Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% @materials.each do |material| %>
                  <tr>
                    <td><%= material.description %></td>
                    <td><%= material.client_description %></td>
                    <td><%= number_to_currency(material.price) %></td>
                    <td><%= material.unit.abbreviation %></td>
                    <td>
                      <% if material.ancho.present? && material.largo.present? %>
                        <%= material.ancho %> x <%= material.largo %>
                      <% elsif material.ancho.present? %>
                        <%= material.ancho %>
                      <% elsif material.largo.present? %>
                        <%= material.largo %>
                      <% else %>
                        <span class="text-muted">No dimensions</span>
                      <% end %>
                    </td>
                    <td class="text-end">
                      <%= link_to edit_material_path(material), class: "btn btn-sm btn-outline-primary me-1" do %>
                        <i class="fa fa-edit"></i>
                      <% end %>
                      <%= button_to duplicate_material_path(material), 
                          method: :post,
                          class: "btn btn-sm btn-outline-secondary me-1",
                          form: { style: 'display: inline-block;' } do %>
                        <i class="fa fa-copy"></i>
                      <% end %>
                      <%= button_to material_path(material), 
                          method: :delete,
                          class: "btn btn-sm btn-outline-danger",
                          form: { style: 'display: inline-block;', data: { turbo_confirm: "¿Estás seguro?" } } do %>
                        <i class="fa fa-trash"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        
        <!-- Card view for small screens and mobile -->
        <div class="d-md-none px-1">
          <% @materials.each do |material| %>
            <div class="card mb-4 border-0 shadow-lg" style="border-bottom: 3px solid #28a745 !important;">
              <div class="card-body p-2">
                <div class="d-flex justify-content-between align-items-center mb-1">
                  <h6 class="card-title mb-0 fw-bold text-truncate" style="width: 30%"><%= material.client_description %></h6>
                  <div class="d-flex justify-content-evenly align-items-center" style="width: 40%">
                    <span class="badge bg-secondary">
                      <% if material.ancho.present? && material.largo.present? %>
                        <%= material.ancho %> x <%= material.largo %>
                      <% elsif material.ancho.present? %>
                        W: <%= material.ancho %>
                      <% elsif material.largo.present? %>
                        L: <%= material.largo %>
                      <% else %>
                        -
                      <% end %>
                    </span>
                    <span class="badge bg-primary">
                      <%= number_to_currency(material.price) %>
                    </span>
                  </div>
                  <div class="d-flex">
                    <%= link_to edit_material_path(material), class: "btn btn-sm btn-outline-primary me-1" do %>
                      <i class="fa fa-edit fa-sm"></i>
                    <% end %>
                    <%= button_to duplicate_material_path(material), 
                        method: :post,
                        class: "btn btn-sm btn-outline-secondary me-1",
                        form: { style: 'display: inline-block;' } do %>
                      <i class="fa fa-copy fa-sm"></i>
                    <% end %>
                    <%= button_to material_path(material), method: :delete, 
                        class: "btn btn-sm btn-outline-danger", 
                        form: { style: 'display: inline-block;', data: { turbo_confirm: "¿Estás seguro?" } } do %>
                      <i class="fa fa-trash fa-sm"></i>
                    <% end %>
                  </div>
                </div>
                <div class="small text-muted">
                  <%= material.description %> | <%= material.unit.abbreviation %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="card shadow-sm">
          <div class="card-body p-4">
            <div class="alert alert-info">
              No hay materiales. <%= link_to "Crea tu primer material", new_material_path %>.
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Include Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
