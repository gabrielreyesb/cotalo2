<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Pipedrive API Verification Results</h5>
        </div>
        <div class="card-body">
          <% if @success %>
            <div class="alert alert-success">
              <h5>API Key is Valid</h5>
              <p>Successfully verified connection to Pipedrive account.</p>
            </div>
            
            <h6 class="mt-4">Account Information:</h6>
            <table class="table table-bordered">
              <tr>
                <th>User Name</th>
                <td><%= @account_info[:name] %></td>
              </tr>
              <tr>
                <th>Email</th>
                <td><%= @account_info[:email] %></td>
              </tr>
              <tr>
                <th>Company</th>
                <td><%= @account_info[:company] %></td>
              </tr>
              <tr>
                <th>API Key Prefix</th>
                <td><%= @api_key_prefix %></td>
              </tr>
            </table>
          <% else %>
            <div class="alert alert-danger">
              <h5>API Key Verification Failed</h5>
              <p><%= @error || "Could not verify Pipedrive API key" %></p>
            </div>
            
            <% if @api_key_prefix %>
              <div class="mt-3">
                <p>API Key Prefix: <%= @api_key_prefix %></p>
              </div>
            <% end %>
          <% end %>
        </div>
        <div class="card-footer">
          <a href="<%= edit_app_configs_path %>" class="btn btn-primary">Back to Settings</a>
        </div>
      </div>
    </div>
  </div>
</div> 