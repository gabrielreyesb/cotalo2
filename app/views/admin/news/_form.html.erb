<%= form_with(model: [:admin, news], local: true) do |f| %>
  <% if news.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(news.errors.count, "error") %> impidieron guardar esta noticia:</h4>
      <ul>
        <% news.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :title, "Título", class: "form-label" %>
    <%= f.text_field :title, class: "form-control", placeholder: "Ingresa el título de la noticia" %>
  </div>

  <div class="mb-3">
    <%= f.label :content, "Contenido", class: "form-label" %>
    <%= f.text_area :content, class: "form-control", rows: 10, placeholder: "Escribe el contenido de la noticia" %>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit news.new_record? ? "Crear Noticia" : "Actualizar Noticia", class: "btn btn-success" %>
    <%= link_to "Cancelar", admin_news_index_path, class: "btn btn-secondary" %>
  </div>
<% end %> 