<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2><%= t('admin.news.new.title') %></h2>
    <%= link_to admin_news_index_path, class: "btn btn-outline-secondary" do %>
      <i class="fas fa-arrow-left me-1"></i> <%= t('admin.news.new.back') %>
    <% end %>
  </div>

  <div class="card bg-dark text-white">
    <div class="card-body">
      <%= render 'form', news: @news %>
    </div>
  </div>
</div> 