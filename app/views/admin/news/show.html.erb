<% content_for :page_title do %>
  <%= t('admin.news.show.title') %>
<% end %>

<% content_for :page_actions do %>
  <%= link_to admin_news_index_path, class: "btn btn-secondary" do %>
    <i class="fas fa-arrow-left me-1"></i> <%= t('admin.news.show.back') %>
  <% end %>
  <%= link_to edit_admin_news_path(@news), class: "btn btn-outline-light" do %>
    <i class="fas fa-edit me-1"></i> <%= t('admin.news.show.edit') %>
  <% end %>
  <%= button_to admin_news_path(@news), method: :delete, 
      class: "btn btn-outline-danger", 
      form: { style: 'display: inline-block;', data: { turbo_confirm: t('common.confirm_delete') } },
      title: t('common.delete') do %>
    <i class="fa fa-trash"></i>
  <% end %>
<% end %>

<div class="card bg-dark text-white">
  <div class="card-body">
    
    <!-- Title Section -->
    <h5><%= t('admin.news.form.title') %></h5>
    <p class="lead bg-darker p-2 rounded"><%= @news.title %></p>
    
    <hr class="my-4">
    
    <!-- Content Section -->
    <h5><%= t('admin.news.form.content') %></h5>
    <div class="bg-darker p-3 rounded">
      <%= simple_format(@news.content) %>
    </div>

    <hr class="my-4">

    <!-- Publication Date -->
    <div class="text-end text-muted">
      <small>
        <i class="fas fa-calendar me-1"></i>
        <%= t('admin.news.show.published_on') %> <%= @news.published_at.strftime('%d/%m/%Y %H:%M') %>
      </small>
    </div>
  </div>
</div>

<style>
  .small-caps {
    font-variant: small-caps;
    letter-spacing: 0.5px;
  }
  .news-content-box {
    background-color: var(--darker-bg);
    border: 1px solid var(--border-color);
    white-space: pre-wrap; /* Preserves whitespace and line breaks */
  }
</style> 