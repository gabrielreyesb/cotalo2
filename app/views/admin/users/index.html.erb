<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>User Management</h1>
    <%= link_to 'Back to Dashboard', admin_root_path, class: 'btn btn-secondary' %>
  </div>

  <div class="card bg-dark text-white">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-dark">
          <thead>
            <tr>
              <th>Email</th>
              <th>Admin</th>
              <th>Created At</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.email %></td>
                <td>
                  <span class="badge <%= user.admin? ? 'bg-success' : 'bg-secondary' %>">
                    <%= user.admin? ? 'Yes' : 'No' %>
                  </span>
                </td>
                <td><%= user.created_at.strftime("%Y-%m-%d") %></td>
                <td>
                  <div class="btn-group">
                    <% unless user == current_user %>
                      <%= link_to admin_impersonations_path(user_id: user.id), 
                                  method: :post, 
                                  class: "btn btn-sm btn-success me-2" do %>
                        <i class="fas fa-user-secret"></i> Impersonate
                      <% end %>
                      <%= link_to admin_user_path(user), 
                          method: :delete, 
                          data: { confirm: "Are you sure you want to delete this user?" },
                          class: "btn btn-sm btn-danger me-2" do %>
                        <i class="fas fa-trash"></i> Delete
                      <% end %>
                    <% end %>
                    <%= link_to edit_admin_user_path(user), class: "btn btn-sm btn-secondary" do %>
                      <i class="fas fa-edit"></i> Edit
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
