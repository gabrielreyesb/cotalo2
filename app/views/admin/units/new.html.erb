<% content_for :page_title do %>
  Nueva unidad
<% end %>

<% content_for :page_actions do %>
  <%= link_to admin_units_path, class: "btn btn-outline-light me-2" do %>
    Cancelar
  <% end %>
  <%= button_tag class: "btn btn-outline-light", form: "unit-form" do %>
    Guardar
  <% end %>
<% end %>

<div class="row">
  <div class="col-12">
    <div class="card green-accent-panel">
      <div class="card-body">
        <%= render 'form', unit: @unit %>
      </div>
    </div>
  </div>  
</div> 