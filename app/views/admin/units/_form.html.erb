<%= form_with(model: [:admin, unit], local: true) do |f| %>
  <% if unit.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(unit.errors.count, "error") %> impidieron guardar esta unidad:</h4>
      <ul>
        <% unit.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, "Nombre", class: "form-label" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Ej: Metros" %>
  </div>

  <div class="mb-3">
    <%= f.label :abbreviation, "Abreviatura", class: "form-label" %>
    <%= f.text_field :abbreviation, class: "form-control", placeholder: "Ej: m" %>
  </div>

  <div class="d-flex justify-content-between">
    <%= link_to "Cancelar", admin_units_path, class: "btn btn-secondary" %>
    <%= f.submit unit.new_record? ? "Crear Unidad" : "Actualizar Unidad", class: "btn btn-primary" %>
  </div>
<% end %> 