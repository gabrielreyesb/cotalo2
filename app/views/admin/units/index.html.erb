<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Unidades</h1>
    <%= link_to new_admin_unit_path, class: 'btn btn-success' do %>
      <i class="fa fa-plus me-1"></i> Nueva Unidad
    <% end %>
  </div>

  <div class="card bg-dark text-white">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-dark">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Abreviatura</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @units.each do |unit| %>
              <tr>
                <td><%= unit.name %></td>
                <td><%= unit.abbreviation %></td>
                <td>
                  <div class="btn-group">
                    <%= link_to edit_admin_unit_path(unit), class: 'btn btn-sm btn-primary me-2' do %>
                      <i class="fas fa-edit"></i> Editar
                    <% end %>
                    <%= button_to admin_unit_path(unit), method: :delete, class: 'btn btn-sm btn-danger',
                        data: { turbo_confirm: '¿Estás seguro?' } do %>
                      <i class="fas fa-trash"></i> Eliminar
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div> 