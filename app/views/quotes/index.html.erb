<style>
.project-link {
  color: var(--cotalo-green) !important;
  text-decoration: none;
}

.project-link:hover {
  text-decoration: underline;
}
</style>

<div class="container-fluid py-4 px-3">
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <h1>Cotizaciones</h1>
        <%= link_to new_quote_path, class: "btn btn-primary" do %>
          <i class="fas fa-plus"></i> Nueva cotización
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <% if @quotes.any? %>
        <!-- Table view for medium and large screens -->
        <div class="card d-none d-md-block shadow-sm mb-4">
          <div class="card-body p-4">
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>Fecha</th>
                    <th>Número</th>
                    <th>Proyecto</th>
                    <th>Cliente</th>
                    <th class="text-end">Total</th>
                    <th class="text-end">Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  <% @quotes.each do |quote| %>
                    <tr>
                      <td><%= quote.created_at.strftime("%d/%m/%Y") %></td>
                      <td><%= quote.quote_number %></td>
                      <td><%= link_to quote.project_name, quote_path(quote), class: "project-link" %></td>
                      <td><%= quote.customer_name %></td>
                      <td class="text-end"><%= number_to_currency(quote.data["totals"]["total"]) %></td>
                      <td class="text-end">
                        <div class="btn-group" role="group">
                          <%= link_to quote_path(quote), class: "btn btn-sm btn-outline-secondary me-1", title: "Ver" do %>
                            <i class="fas fa-eye"></i>
                          <% end %>
                          <%= link_to edit_quote_path(quote), class: "btn btn-sm btn-outline-primary me-1", title: "Editar" do %>
                            <i class="fas fa-edit"></i>
                          <% end %>
                          <%= link_to pdf_quote_path(quote, format: :pdf), class: "btn btn-sm btn-outline-secondary me-1", title: "Descargar PDF", target: "_blank" do %>
                            <i class="fas fa-file-pdf"></i>
                          <% end %>
                          <%= link_to quote_path(quote), method: :delete, data: { confirm: "¿Estás seguro de eliminar esta cotización?" }, class: "btn btn-sm btn-outline-danger", title: "Eliminar" do %>
                            <i class="fas fa-trash"></i>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        
        <!-- Card view for small screens -->
        <div class="d-md-none">
          <% @quotes.each do |quote| %>
            <div class="card mb-4 border-0 shadow-lg" style="border-bottom: 3px solid var(--cotalo-green) !important;">
              <!-- First row: date and quote # -->
              <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                <span class="badge bg-primary"><%= quote.created_at.strftime("%d/%m/%Y") %></span>
                <h5 class="mb-0"><%= quote.quote_number %></h5>
              </div>
              
              <div class="card-body p-3">
                <!-- Second row: project name -->
                <div class="mb-3">
                  <h5 class="fw-bold text-truncate"><%= link_to quote.project_name, quote_path(quote), class: "project-link" %></h5>
                </div>
                
                <!-- Third row: customer name and organization -->
                <div class="d-flex mb-3 bg-dark text-white p-2 rounded">
                  <div class="d-flex flex-column w-100">
                    <% if quote.customer_name.present? %>
                      <span class="mb-1"><%= quote.customer_name %></span>
                    <% end %>
                    <% if quote.organization.present? %>
                      <span><%= quote.organization %></span>
                    <% end %>
                  </div>
                </div>
                
                <!-- Fourth row: total price and action buttons -->
                <div class="d-flex justify-content-between align-items-center">
                  <span class="fs-5 fw-bold text-success"><%= number_to_currency(quote.data["totals"]["total"]) %></span>
                  
                  <div class="d-flex">
                    <%= link_to quote_path(quote), class: "btn btn-sm btn-outline-secondary px-2 py-1 me-1", title: "Ver" do %>
                      <i class="fas fa-eye fa-sm"></i>
                    <% end %>
                    <%= link_to edit_quote_path(quote), class: "btn btn-sm btn-outline-primary px-2 py-1 me-1", title: "Editar" do %>
                      <i class="fas fa-edit fa-sm"></i>
                    <% end %>
                    <%= link_to pdf_quote_path(quote, format: :pdf), class: "btn btn-sm btn-outline-secondary px-2 py-1 me-1", title: "Descargar PDF", target: "_blank" do %>
                      <i class="fas fa-file-pdf fa-sm"></i>
                    <% end %>
                    <%= link_to quote_path(quote), method: :delete, data: { confirm: "¿Estás seguro de eliminar esta cotización?" }, class: "btn btn-sm btn-outline-danger px-2 py-1", title: "Eliminar" do %>
                      <i class="fas fa-trash fa-sm"></i>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-5">
          <p class="mb-4">No hay cotizaciones creadas aún.</p>
          <%= link_to new_quote_path, class: "btn btn-primary" do %>
            <i class="fas fa-plus"></i> Crear nueva cotización
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div> 