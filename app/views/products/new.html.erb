<div class="row">
  <div class="col-12 mb-4">
    <div class="d-flex justify-content-center align-items-center">
      <h1 class="text-light me-4">Nuevo producto</h1>
      <%= link_to products_path, class: "btn btn-outline-secondary position-absolute start-0 ms-3" do %>
        <i class="fa fa-arrow-left me-1"></i> Volver
      <% end %>
    </div>
  </div>
</div>

<!-- Include Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<!-- Vue app mount point -->
<div id="product-form-app" data-product-id=""></div>

<!-- API token for authentication -->
<%= tag.meta name: "csrf-token", content: form_authenticity_token %>

<!-- Load Vue app -->
<%= javascript_pack_tag 'product_form' %> 