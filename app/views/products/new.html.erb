<!-- Container to match form width -->
<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-12">
      <div class="position-relative mb-4">
        <div class="text-center">
          <h1 class="text-light">Nuevo producto</h1>
        </div>
        <%= link_to products_path, class: "btn btn-outline-secondary position-absolute top-50 end-0 translate-middle-y" do %>
          <i class="fa fa-arrow-left me-1"></i> Volver
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Include Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<!-- Vue app mount point -->
<div id="product-form-app" data-product-id=""></div>

<!-- API token for authentication -->
<%= tag.meta name: "csrf-token", content: form_authenticity_token %>

<!-- Load Vue app -->
<%= javascript_pack_tag 'product_form' %> 