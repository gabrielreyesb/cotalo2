<div class="container">
  <div class="row justify-content-center align-items-center" style="height: 70vh;">
    <div class="col-md-6 col-lg-5">
      <div class="green-accent-panel">
        <div class="card-body p-5">
          <div class="text-center mb-4">
            <h2 class="fw-bold mb-0">Registrate gratis</h2>
            <p class="text-muted">No se requiere tarjeta de crédito</p>
          </div>

          <% if flash[:alert] %>
            <div class="alert alert-danger text-center mb-4">
              <%= flash[:alert] %>
            </div>
          <% end %>
          <% if flash[:error] %>
            <div class="alert alert-danger text-center mb-4">
              <%= flash[:error] %>
            </div>
          <% end %>
          <% if flash[:notice] %>
            <div class="alert alert-info text-center mb-4">
              <%= flash[:notice] %>
            </div>
          <% end %>
          <% if resource.errors.any? %>
            <div class="alert alert-danger text-center mb-4">
              <% resource.errors.full_messages.each do |msg| %>
                <div><%= msg %></div>
              <% end %>
            </div>
          <% end %>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "login-form", novalidate: true }) do |f| %>
            <div class="form-group mb-4">
              <%= f.label :email, class: "form-label" do %>
                Email
              <% end %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fa fa-envelope"></i>
                </span>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                    class: "form-control",
                    placeholder: "nombre@ejemplo.com", required: true %>
              </div>
            </div>

            <div class="form-group mb-4">
              <%= f.label :password, class: "form-label" do %>
                Contraseña
              <% end %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fa fa-lock"></i>
                </span>
                <%= f.password_field :password, autocomplete: "new-password",
                    class: "form-control",
                    placeholder: "••••••••",
                    id: "user_password", required: true %>
                <button type="button" class="btn btn-outline-secondary" id="toggle-password-visibility" tabindex="-1" style="border-top-left-radius: 0; border-bottom-left-radius: 0;">
                  <i class="fa fa-eye" id="toggle-password-icon"></i>
                </button>
              </div>
              <small class="form-text text-muted">Mínimo 6 caracteres</small>
            </div>

            <div class="form-group mb-4">
              <%= f.label :password_confirmation, class: "form-label" do %>
                Confirmar contraseña
              <% end %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fa fa-lock"></i>
                </span>
                <%= f.password_field :password_confirmation, autocomplete: "new-password",
                    class: "form-control",
                    placeholder: "••••••••",
                    id: "user_password_confirmation", required: true %>
                <button type="button" class="btn btn-outline-secondary" id="toggle-password-confirmation-visibility" tabindex="-1" style="border-top-left-radius: 0; border-bottom-left-radius: 0;">
                  <i class="fa fa-eye" id="toggle-password-confirmation-icon"></i>
                </button>
              </div>
            </div>


            <div class="d-grid mb-4">
              <%= f.submit "Regístrse", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <div class="text-center">
            <div class="text-muted mb-2">¿Ya tienes una cuenta?</div>
            <%= link_to "Iniciar sesión", new_session_path(resource_name), 
                class: "text-primary text-decoration-none" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :styles do %>
<style>
  .card {
    background-color: #1e2124;
    border: none;
  }

  .form-label {
    color: #e1e1e1;
    font-weight: 500;
  }

  .required-field {
    position: relative;
  }

  .required-asterisk {
    color: var(--cotalo-green);
    font-weight: bold;
    margin-left: 3px;
  }

  .form-text {
    color: #adb5bd !important;
    font-size: 0.875rem;
    margin-top: 0.25rem;
  }

  .form-control {
    color: #e1e1e1;
    background-color: #2c3136;
    border: 1px solid #495057;
    border-radius: 4px;
    text-align: left;
  }

  /* Ensure all form controls are left-aligned */
  input.form-control,
  input.form-control[type="text"],
  input.form-control[type="email"],
  input.form-control[type="password"],
  input.form-control[type="tel"] {
    text-align: left !important;
    direction: ltr !important;
  }
  
  /* Placeholder text alignment */
  input.form-control::placeholder,
  input.form-control[type="text"]::placeholder,
  input.form-control[type="email"]::placeholder,
  input.form-control[type="password"]::placeholder,
  input.form-control[type="tel"]::placeholder {
    text-align: left !important;
    direction: ltr !important;
  }
  
  /* Autofill styles */
  input.form-control:-webkit-autofill,
  input.form-control[type="text"]:-webkit-autofill,
  input.form-control[type="email"]:-webkit-autofill,
  input.form-control[type="password"]:-webkit-autofill,
  input.form-control[type="tel"]:-webkit-autofill {
    text-align: left !important;
    -webkit-text-align: left !important;
    direction: ltr !important;
  }

  .form-control:focus {
    color: #e1e1e1;
    background-color: #2c3136;
    border-color: var(--cotalo-green);
    box-shadow: 0 0 0 0.2rem rgba(66, 185, 131, 0.25);
  }

  .form-control::placeholder {
    color: #6c757d;
  }

  .input-group-text {
    color: #e1e1e1;
    background-color: #2c3136;
    border: 1px solid #495057;
  }

  .input-group-text i {
    color: #e1e1e1;
    font-size: 1.1rem;
  }

  .form-check-input {
    background-color: #2c3136;
    border-color: #495057;
  }

  .form-check-input:checked {
    background-color: var(--cotalo-green);
    border-color: var(--cotalo-green);
  }

  .form-check-label {
    color: #e1e1e1;
  }

  .btn-primary {
    background-color: var(--cotalo-green);
    border-color: var(--cotalo-green);
    padding: 0.75rem 1.5rem;
    font-weight: 500;
  }

  .btn-primary:hover {
    background-color: var(--cotalo-green-dark);
    border-color: var(--cotalo-green-dark);
  }

  .text-primary {
    color: var(--cotalo-green) !important;
  }

  .text-primary:hover {
    color: var(--cotalo-green-dark) !important;
  }

  .text-muted {
    color: #adb5bd !important;
  }

  h2 {
    color: #e1e1e1;
  }

  small {
    font-size: 0.875rem;
  }
</style>
<% end %>

<% content_for :scripts do %>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Password field
    var toggleBtn = document.getElementById('toggle-password-visibility');
    var passwordInput = document.getElementById('user_password');
    var icon = document.getElementById('toggle-password-icon');
    if (toggleBtn && passwordInput && icon) {
      toggleBtn.addEventListener('click', function() {
        if (passwordInput.type === 'password') {
          passwordInput.type = 'text';
          icon.classList.remove('fa-eye');
          icon.classList.add('fa-eye-slash');
        } else {
          passwordInput.type = 'password';
          icon.classList.remove('fa-eye-slash');
          icon.classList.add('fa-eye');
        }
      });
    }
    // Password confirmation field
    var toggleBtn2 = document.getElementById('toggle-password-confirmation-visibility');
    var passwordInput2 = document.getElementById('user_password_confirmation');
    var icon2 = document.getElementById('toggle-password-confirmation-icon');
    if (toggleBtn2 && passwordInput2 && icon2) {
      toggleBtn2.addEventListener('click', function() {
        if (passwordInput2.type === 'password') {
          passwordInput2.type = 'text';
          icon2.classList.remove('fa-eye');
          icon2.classList.add('fa-eye-slash');
        } else {
          passwordInput2.type = 'password';
          icon2.classList.remove('fa-eye-slash');
          icon2.classList.add('fa-eye');
        }
      });
    }
  });
</script>
<% end %> 