<div class="row">
  <div class="col-12 mb-4">
    <div class="d-flex justify-content-between align-items-center">
      <h1><%= @manufacturing_process.name %></h1>
      <div>
        <%= link_to edit_manufacturing_process_path(@manufacturing_process), class: "btn btn-outline-primary me-2" do %>
          <i class="fa fa-edit me-1"></i> Edit
        <% end %>
        <%= link_to manufacturing_processes_path, class: "btn btn-outline-secondary" do %>
          <i class="fa fa-arrow-left me-1"></i> Back
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h5>Process Details</h5>
      </div>
      <div class="card-body">
        <div class="row mb-3">
          <div class="col-md-3 col-lg-2">
            <strong>Name:</strong>
          </div>
          <div class="col-md-9 col-lg-10">
            <%= @manufacturing_process.name %>
          </div>
        </div>
        
        <div class="row mb-3">
          <div class="col-md-3 col-lg-2">
            <strong>Cost:</strong>
          </div>
          <div class="col-md-9 col-lg-10">
            <%= number_to_currency(@manufacturing_process.cost) %>
          </div>
        </div>
        
        <div class="row mb-3">
          <div class="col-md-3 col-lg-2">
            <strong>Unit:</strong>
          </div>
          <div class="col-md-9 col-lg-10">
            <%= @manufacturing_process.unit&.name || "Not specified" %>
          </div>
        </div>
        
        <div class="row mb-3">
          <div class="col-md-3 col-lg-2">
            <strong>Description:</strong>
          </div>
          <div class="col-md-9 col-lg-10">
            <%= simple_format(@manufacturing_process.description) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
