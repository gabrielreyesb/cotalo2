<% content_for :page_title do %>
  Nuevo proceso
<% end %>

<% content_for :page_actions do %>
  <%= link_to manufacturing_processes_path, class: "btn btn-outline-light me-2" do %>
    Cancelar
  <% end %>
  <%= button_tag class: "btn btn-outline-light", form: "manufacturing-process-form" do %>
    Guardar
  <% end %>
<% end %>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h5>Detalles del proceso</h5>
      </div>
      <div class="card-body p-3">
        <%= render 'form', manufacturing_process: @manufacturing_process %>
      </div>
    </div>
  </div>
</div>
