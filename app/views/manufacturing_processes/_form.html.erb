<%= form_with(model: manufacturing_process, id: "manufacturing-process-form", html: { novalidate: true }) do |form| %>
  <% if manufacturing_process.errors.any? %>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        window.showError('<%= j(manufacturing_process.errors.first.message) %>');
      });
    </script>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, t('processes.form.name'), class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="row mb-3">
    <div class="col-md-4">
      <%= form.label :unit_id, t('processes.form.unit'), class: "form-label" %>
      <%= form.collection_select :unit_id, Unit.all, :id, :name, {}, class: "form-select" %>
      <div class="form-text">
        <%= t('processes.form.unit_help') %>
      </div>
    </div>

    <div class="col-md-4">
      <%= form.label :cost, t('processes.form.cost'), class: "form-label" %>
      <div class="input-group">
        <span class="input-group-text">$</span>
        <%= form.number_field :cost, step: '0.01', class: "form-control" %>
      </div>
    </div>

    <div class="col-md-4">
      <%= form.label :side, t('processes.form.side', default: 'Cara'), class: "form-label" %>
      <%= form.select :side, 
          options_for_select([
            ['Frente', 'front'],
            ['Reverso', 'back'],
            ['Ambas', 'both']
          ], manufacturing_process.side), 
          {}, 
          class: "form-select" %>
      <div class="form-text">
        <%= t('processes.form.side_help', default: 'Indica si el proceso se aplica al frente, reverso o ambas caras') %>
      </div>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :description, t('processes.form.description'), class: "form-label" %>
    <%= form.text_area :description, rows: 3, class: "form-control" %>
  </div>
<% end %> 