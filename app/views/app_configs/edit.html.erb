  }

  .form-select::placeholder,
  .form-control::placeholder {
    color: #6c757d;
  }

  /* Label styling */
  .form-label {
    color: #adb5bd;
    margin-bottom: 0.5rem;
  }

  /* Button styling */
  .btn-primary {
    color: #fff;
    background-color: #42b983;
    border-color: #42b983;
  }

  .btn-primary:hover {
