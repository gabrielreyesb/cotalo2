<%= form_with(model: price_margin, class: "needs-validation") do |form| %>
  <% if price_margin.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(price_margin.errors.count, "error") %> impidieron que este margen se guardara:</h4>
      <ul>
        <% price_margin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4 mb-3">
      <%= form.label :min_price, "Precio mínimo", class: "form-label" %>
      <div class="input-group">
        <span class="input-group-text">$</span>
        <%= form.number_field :min_price, class: "form-control", step: "0.01", min: 0, required: true %>
      </div>
    </div>
    
    <div class="col-md-4 mb-3">
      <%= form.label :max_price, "Precio máximo", class: "form-label" %>
      <div class="input-group">
        <span class="input-group-text">$</span>
        <%= form.number_field :max_price, class: "form-control", step: "0.01", min: 0, required: true %>
      </div>
    </div>
    
    <div class="col-md-4 mb-3">
      <%= form.label :margin_percentage, "Margen (%)", class: "form-label" %>
      <div class="input-group">
        <%= form.number_field :margin_percentage, class: "form-control", step: "0.01", min: 0, max: 100, required: true %>
        <span class="input-group-text">%</span>
      </div>
    </div>
  </div>
  
  <div class="d-flex justify-content-end">
    <%= link_to "Cancelar", price_margins_path, class: "btn btn-secondary me-2" %>
    <%= form.submit "Guardar", class: "btn btn-primary" %>
  </div>
<% end %> 