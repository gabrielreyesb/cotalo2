<% content_for :page_title do %>
  Nuevo extra
<% end %>

<% content_for :page_actions do %>
  <%= link_to extras_path, class: "btn btn-outline-light me-2" do %>
    Cancelar
  <% end %>
  <%= button_tag class: "btn btn-outline-light", form: "extra-form" do %>
    Guardar
  <% end %>
<% end %>

<div class="row">
  <div class="col-12">
    <div class="card green-accent-panel">
      <div class="card-body p-3">
        <%= render 'form', extra: @extra %>
      </div>
    </div>
  </div>
</div>
