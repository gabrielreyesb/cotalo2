<% content_for :page_title do %>
  <%= t('extras.show.title') %>
<% end %>

<% content_for :page_actions do %>
  <%= link_to edit_extra_path(@extra), class: "btn btn-outline-light me-2" do %>
    <i class="fas fa-edit me-1"></i><%= t('extras.show.edit') %>
  <% end %>
  <%= button_to extra_path(@extra), method: :delete, 
      class: "btn btn-outline-danger me-2", 
      form: { data: { turbo_confirm: t('extras.show.delete_confirm') } } do %>
    <i class="fas fa-trash me-1"></i><%= t('extras.show.delete') %>
  <% end %>
  <%= link_to extras_path, class: "btn btn-outline-light" do %>
    <i class="fas fa-arrow-left me-1"></i><%= t('extras.show.back_to_extras') %>
  <% end %>
<% end %>

<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="card">
      <div class="card-header">
        <h3><%= @extra.name %></h3>
      </div>
      <div class="card-body">
        <div class="row mb-3">
          <div class="col-md-6">
            <strong><%= t('extras.show.name') %>:</strong>
            <p><%= @extra.name %></p>
          </div>
          <div class="col-md-6">
            <strong><%= t('extras.show.cost') %>:</strong>
            <p><%= number_to_currency(@extra.cost) %></p>
          </div>
        </div>
        
        <div class="row mb-3">
          <div class="col-md-6">
            <strong><%= t('extras.show.unit') %>:</strong>
            <p>
              <%= @extra.unit&.name || t('extras.show.not_specified') %>
              <% if @extra.unit&.abbreviation.present? %>
                (<%= @extra.unit.abbreviation %>)
              <% end %>
            </p>
          </div>
          <div class="col-md-6">
            <strong><%= t('extras.show.description') %>:</strong>
            <p><%= simple_format(@extra.description) %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
